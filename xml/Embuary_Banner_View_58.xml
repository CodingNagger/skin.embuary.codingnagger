<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="Banner_View_58">
		<control type="group">
			<include>Visible_OpenClose</include>
			<visible>Control.IsVisible(58)</visible>
			<control id="58" type="panel">
				<visible>Container.Content(movies) | Container.Content(tvshows)</visible>
				<width>auto</width>
				<height>1080</height>
				<onright condition="Control.IsVisible(7000)">SetFocus(7000)</onright>
				<onright>noop</onright>
				<onup>SetFocus(6666)</onup>
				<include>Bounce_Up_Down</include>
				<ondown>SetProperty(BounceDown,1,home)</ondown>
				<onleft>900</onleft>
				<scrolltime tween="sine" easing="out">400</scrolltime>
				<orientation>vertical</orientation>
				<preloaditems>4</preloaditems>
				<defaultcontrol always="true">0</defaultcontrol>
				<viewtype label="$LOCALIZE[20020]">panel</viewtype>
				<pagecontrol>17</pagecontrol>
				<itemlayout width="900" height="229">
					<control type="group">
						<left>70</left>
						<top>122</top>
						<include content="BannerLayout">
							<param name="mainlabel" value="$VAR[MainListLabel]$INFO[ListItem.Year, - ]" />
							<param name="sublabel" value="" />
							<param name="focused" value="false" />
							<param name="id" value="58" />
						</include>
					</control>
				</itemlayout>
				<focusedlayout width="900" height="229">
					<include>SetPropertyOnFocus</include>
					<control type="group">							
						<left>70</left>
						<top>122</top>
						<include content="BannerLayout">
							<param name="mainlabel" value="$VAR[MainListLabel]$INFO[ListItem.Year, - ]" />
							<param name="sublabel" value="" />
							<param name="focused" value="true" />
							<param name="id" value="58" />
							<param name="visible_forced" value="true"/>
						</include>
					</control>
				</focusedlayout>
			</control>
			<include content="JumpToLetter_vertical"/>
		</control>
	</include>
</includes>