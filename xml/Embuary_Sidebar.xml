<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="SidebarItemLayout">
		<param name="focused">false</param>
		<definition>
			<control type="group">
				<width>$PARAM[width]</width>
				<height>50</height>
				<control type="image">
					<height>50</height>
					<width>$PARAM[width]</width>
					<texture colordiffuse="sidepanel_focus">common/white.jpg</texture>
					<aspectratio>stretch</aspectratio>
					<visible>Control.HasFocus($PARAM[id]) + $PARAM[focused]</visible>
				</control>
				<control type="label">
					<top>6</top>
					<left>45</left>
					<height>40</height>
					<aligny>center</aligny>
					<align>left</align>
					<font>Material20</font>
					<textcolor>sidepanel_textcolor</textcolor>
					<label>$VAR[SidebarIcon]</label>
				</control>
				<control type="label">
					<top>5</top>
					<left>90</left>
					<right>15</right>
					<height>40</height>
					<align>left</align>
					<aligny>center</aligny>
					<font>Reg22</font>
					<textcolor>sidepanel_textcolor</textcolor>
					<label>$INFO[ListItem.Label]</label>
				</control>
			</control>
		</definition>
	</include>

	<!-- Side Menu Button Layout -->
	<include name="SideButton">
		<param name="width">100%</param>
		<param name="icon">ÔÅî</param>
		<param name="icon_left">55</param>
		<param name="label_left">100</param>
		<param name="focused">false</param>
		<param name="condition1">true</param>
		<param name="condition2">true</param>
		<param name="condition3">true</param>
		<param name="condition4">true</param>
		<param name="condition5">true</param>
		<param name="condition6">true</param>
		<param name="condition7">true</param>
		<param name="condition8">true</param>
		<param name="condition9">true</param>
		<param name="condition10">true</param>
		<param name="action1">noop</param>
		<param name="action2">noop</param>
		<param name="action3">noop</param>
		<param name="action4">noop</param>
		<param name="action5">noop</param>
		<param name="action6">noop</param>
		<param name="action7">noop</param>
		<param name="action8">noop</param>
		<param name="action9">noop</param>
		<param name="action10">noop</param>
		<param name="onright">10</param>
		<param name="visible">true</param>
		<param name="closepanel">true</param>
		<definition>
			<control type="group">
				<visible>$PARAM[visible]</visible>
				<width>$PARAM[width]</width>
				<height>50</height>
				<control type="image">
					<height>50</height>
					<width>$PARAM[width]</width>
					<texture colordiffuse="sidepanel_focus">common/white.jpg</texture>
					<aspectratio>stretch</aspectratio>
					<visible>Control.HasFocus($PARAM[id])</visible>
				</control>
				<control type="label">
					<top>6</top>
					<left>$PARAM[icon_left]</left>
					<height>40</height>
					<aligny>center</aligny>
					<align>left</align>
					<font>Material20</font>
					<textcolor>sidepanel_textcolor</textcolor>
					<label>$PARAM[icon]</label>
				</control>
				<control type="button" id="$PARAM[id]">
					<top>5</top>
					<onfocus>Control.Move(902,$INFO[Container(902).CurrentItem,-])</onfocus>
					<onfocus>Control.Move(902,1)</onfocus>
					<onback>$PARAM[onright]</onback>
					<onup>$PARAM[onup]</onup>
					<onright>$PARAM[onright]</onright>
					<ondown>$PARAM[ondown]</ondown>
					<left>$PARAM[label_left]</left>
					<height>40</height>
					<include>NoTextures</include>
					<align>left</align>
					<aligny>center</aligny>
					<font>Reg22</font>
					<textcolor>sidepanel_textcolor</textcolor>
					<focusedcolor>sidepanel_textcolor</focusedcolor>
					<selectedcolor>sidepanel_textcolor</selectedcolor>
					<label>$PARAM[label]</label>
					<onclick condition="$PARAM[closepanel]">right</onclick>
					<onclick>Dialog.Close(all,true)</onclick>
					<onclick condition="$PARAM[condition1]">$PARAM[action1]</onclick>
					<onclick condition="$PARAM[condition2]">$PARAM[action2]</onclick>
					<onclick condition="$PARAM[condition3]">$PARAM[action3]</onclick>
					<onclick condition="$PARAM[condition4]">$PARAM[action4]</onclick>
					<onclick condition="$PARAM[condition5]">$PARAM[action5]</onclick>
					<onclick condition="$PARAM[condition6]">$PARAM[action6]</onclick>
					<onclick condition="$PARAM[condition7]">$PARAM[action7]</onclick>
					<onclick condition="$PARAM[condition8]">$PARAM[action8]</onclick>
					<onclick condition="$PARAM[condition9]">$PARAM[action9]</onclick>
					<onclick condition="$PARAM[condition10]">$PARAM[action10]</onclick>
				</control>
			</control>
		</definition>
	</include>

	<!-- Side Menu Headline -->
	<include name="SideHeadline">
		<param name="width">100%</param>
		<param name="visible">true</param>
		<param name="color">panel_textcolor</param>
		<definition>
			<control type="group" id="99$PARAM[nr]">
				<visible>$PARAM[visible]</visible>
				<height>50</height>
				<top>$PARAM[top]</top>
				<control type="image">
					<top>9</top>
					<height>1</height>
					<width>$PARAM[width]</width>
					<texture colordiffuse="grid_border">common/white.jpg</texture>
					<aspectratio>stretch</aspectratio>
					<visible>false</visible>
				</control>
				<!-- headline -->
				<control type="label">
					<top>10</top>
					<width>$PARAM[width]</width>
					<height>50</height>
					<font>Med22</font>
					<textcolor>$PARAM[color]</textcolor>
					<label>$PARAM[label]</label>
					<textoffsetx>15</textoffsetx>
					<aligny>top</aligny>
				</control>
				<control type="label">
					<top>10</top>
					<width>$PARAM[width]</width>
					<height>50</height>
					<font>Med22</font>
					<textcolor>$PARAM[color]</textcolor>
					<label>$PARAM[label2]</label>
					<textoffsetx>15</textoffsetx>
					<aligny>top</aligny>
					<align>right</align>
				</control>
			</control>
		</definition>
	</include>

	<!-- Side Panel -->
	<include name="SidePanel">
		<param name="width">450</param>
		<param name="onright">10</param>
		<definition>
			<include content="DiffuseMask">
				<param name="visible">ControlGroup(9999).HasFocus</param>
			</include>
			<control type="group" id="9999">
				<animation type="Conditional" condition="ControlGroup(9999).HasFocus" reversible="true">
					<effect type="slide" start="0,0" end="$PARAM[width],0" time="400" tween="cubic" easing="inout" />
				</animation>
				<animation type="WindowClose" condition="ControlGroup(9999).HasFocus" reversible="true">
					<effect type="slide" start="0,0" end="-$PARAM[width],0" time="400" tween="cubic" easing="out" />
				</animation>
				<top>15</top>
				<left>-$PARAM[width]</left>
				<width>$PARAM[width]</width>

				<!-- background -->
				<control type="image">
					<left>400</left>
					<width>100</width>
					<height>100%</height>
					<texture colordiffuse="black">common/panel_shadow.png</texture>
					<aspectratio>stretch</aspectratio>
					<visible>ControlGroup(9999).HasFocus</visible>
				</control>
				<include content="ContentPanel">
					<param name="width">$PARAM[width]</param>
					<param name="height">100%</param>
					<param name="color">sidepanel_background</param>
				</include>

				<!-- home -->
				<control type="list" id="900">
					<orientation>vertical</orientation>
					<height>50</height>
					<width>$PARAM[width]</width>
					<scrolltime>0</scrolltime>
					<onup>noop</onup>
					<ondown>SetFocus(901)</ondown>
					<onright>$PARAM[onright]</onright>
					<onback>$PARAM[onright]</onback>
					<onfocus>Control.Move(901,$INFO[Container(901).CurrentItem,-])</onfocus>
					<onfocus>Control.Move(901,1)</onfocus>
					<itemlayout height="50" width="$PARAM[width]">
						<include content="SidebarItemLayout">
							<param name="id" value="900"/>
							<param name="width" value="$PARAM[width]"/>
						</include>
					</itemlayout>
					<focusedlayout height="50" width="$PARAM[width]">
						<include content="SidebarItemLayout">
							<param name="id" value="900"/>
							<param name="width" value="$PARAM[width]"/>
							<param name="focused" value="true"/>
						</include>
					</focusedlayout>
					<content>
						<item>
							<label>$LOCALIZE[31000]</label>
							<onclick>ActivateWindow(home)</onclick>
							<icon>&#xf2dc;</icon>
						</item>
					</content>
				</control>


				<!-- menu -->
				<include content="SideHeadline">
					<param name="top">50</param>
					<param name="label">14211</param>
					<param name="label2">$INFO[Container(901).CurrentPage] / $INFO[Container(901).NumPages]</param>
				</include>

				<control type="list" id="901">
					<top>100</top>
					<orientation>vertical</orientation>
					<height>650</height>
					<width>$PARAM[width]</width>
					<scrolltime>0</scrolltime>
					<onup>SetFocus(900)</onup>
					<ondown>SetFocus(902,0)</ondown>
					<onright>$PARAM[onright]</onright>
					<onback>$PARAM[onright]</onback>
					<itemlayout height="50" width="$PARAM[width]">
						<include content="SidebarItemLayout">
							<param name="id" value="901"/>
							<param name="width" value="$PARAM[width]"/>
						</include>
					</itemlayout>
					<focusedlayout height="50" width="$PARAM[width]">
						<include content="SidebarItemLayout">
							<param name="id" value="901"/>
							<param name="width" value="$PARAM[width]"/>
							<param name="focused" value="true"/>
						</include>
					</focusedlayout>
					<content><include>skinshortcuts-mainmenu</include></content>
				</control>


				<!-- seperator -->
				<include content="SideHeadline">
					<param name="top">750</param>
					<param name="label">$LOCALIZE[13000]</param>
				</include>

				<control type="list" id="902">
					<top>800</top>
					<orientation>vertical</orientation>
					<height>650</height>
					<width>$PARAM[width]</width>
					<scrolltime>0</scrolltime>
					<onup>SetFocus(900)</onup>
					<ondown>SetFocus(911)</ondown>
					<onright>$PARAM[onright]</onright>
					<onback>$PARAM[onright]</onback>
					<itemlayout height="50" width="$PARAM[width]">
						<include content="SidebarItemLayout">
							<param name="id" value="902"/>
							<param name="width" value="$PARAM[width]"/>
						</include>
					</itemlayout>
					<focusedlayout height="50" width="$PARAM[width]">
						<include content="SidebarItemLayout">
							<param name="id" value="902"/>
							<param name="width" value="$PARAM[width]"/>
							<param name="focused" value="true"/>
						</include>
					</focusedlayout>
					<content>
						<item>
							<label>$LOCALIZE[31226]</label>
							<icon>&#xf342;</icon>
							<onclick>RunScript(plugin.video.embycon,0,?mode=CHANGE_USER)</onclick>
							<property name="forced_icon">true</property>
							<visible>!Skin.HasSetting(KioskMode) + !Skin.HasSetting(HideSPEmbyConUser) + System.HasAddon(plugin.video.embycon)</visible>
						</item>
						<item>
							<label>$LOCALIZE[31129]</label>
							<icon>&#xf450;</icon>
							<onclick>Notification($LOCALIZE[24001],$LOCALIZE[31162])</onclick>
							<onclick>UpdateAddonRepos</onclick>
							<onclick>UpdateLocalAddons</onclick>
							<property name="forced_icon">true</property>
							<visible>!Skin.HasSetting(KioskMode) + !Skin.HasSetting(HideSPAddonUpdate)</visible>
						</item>
						<item>
							<label>$LOCALIZE[799]</label>
							<icon>&#xfcdb;</icon>
							<onclick>SetFocus($PARAM[onright])</onclick>
							<onclick>SetProperty(Dialog.1.Label,$LOCALIZE[3])</onclick>
							<onclick>SetProperty(Dialog.1.BuiltIn,UpdateLibrary(video))</onclick>
							<onclick>SetProperty(Dialog.2.Label,$LOCALIZE[2])</onclick>
							<onclick>SetProperty(Dialog.2.BuiltIn,UpdateLibrary(music))</onclick>
							<onclick>SetProperty(Dialog.3.Label,$LOCALIZE[593])</onclick>
							<onclick>SetProperty(Dialog.3.BuiltIn,UpdateLibrary(music)||UpdateLibrary(video))</onclick>
							<onclick>RunScript(script.embuary.helper,action=createselect,header=$LOCALIZE[653])</onclick>
							<property name="forced_icon">true</property>
							<visible>!Skin.HasSetting(KioskMode) + !Skin.HasSetting(HideSPLibUpdate)</visible>
						</item>
						<item>
							<label>$LOCALIZE[5]</label>
							<icon>&#xf493;</icon>
							<onclick>ActivateWindow(settings)</onclick>
							<property name="forced_icon">true</property>
							<visible>!Skin.HasSetting(KioskMode)</visible>
						</item>
						<item>
							<label>$LOCALIZE[20183]</label>
							<icon>&#xf0e4;</icon>
							<onclick>ReloadSkin()</onclick>
							<property name="forced_icon">true</property>
							<visible>!Skin.HasSetting(HideSPReload)</visible>
						</item>
						<item>
							<label>$LOCALIZE[33060]</label>
							<icon>&#xf425;</icon>
							<onclick>ActivateWindow(shutdownmenu)</onclick>
							<property name="forced_icon">true</property>
						</item>

					</content>
				</control>
			</control>

		</definition>
	</include>

