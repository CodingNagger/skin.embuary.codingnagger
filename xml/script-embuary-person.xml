<?xml version="1.0" encoding="UTF-8"?>
<window>
	<backgroundcolor>background</backgroundcolor>
	<include>PropertyIncludes</include>
	<defaultcontrol>100</defaultcontrol>
	<controls>
		<!-- hidden -->
		<control type="list" id="10051">
			<include>HiddenObject</include>
		</control>
		<!-- background -->
		<include>MultiFanartTmdbPerson</include>
		<include>Background</include>
		<!-- views -->
		<control type="grouplist" id="50">
			<include>Window_OpenClose</include>
			<width>100%</width>
			<height>100%</height>
			<orientation>vertical</orientation>
			<usecontrolcoords>true</usecontrolcoords>
			<include>ScrollTime</include>
			<pagecontrol>17</pagecontrol>
			<itemgap>-80</itemgap>
			<!-- Meta -->
			<control type="group">
				<top>90</top>
				<height>480</height>
				<!-- poster -->
				<control type="group">
					<left>70</left>
					<control type="image">
						<top>-2</top>
						<left>-2</left>
						<width>282</width>
						<height>420</height>
						<texture border="20,20,20,20">items/shadow.png</texture>
					</control>
					<control type="image">
						<width>276</width>
						<height>414</height>
						<texture colordiffuse="$VAR[ThumbFallbackColor]">common/white.jpg</texture>
						<aspectratio scalediffuse="false">stretch</aspectratio>
						<visible>String.IsEmpty(Container(10051).ListItem.Art(thumb))</visible>
					</control>
					<control type="image">
						<width>276</width>
						<height>414</height>
						<texture colordiffuse="thumb_background">common/white.jpg</texture>
						<aspectratio scalediffuse="false">stretch</aspectratio>
						<visible>!String.IsEmpty(Container(10051).ListItem.Art(thumb))</visible>
					</control>
					<control type="textbox">
						<top>10</top>
						<left>10</left>
						<width>256</width>
						<height>394</height>
						<font>Light24</font>
						<textcolor>white</textcolor>
						<align>center</align>
						<aligny>center</aligny>
						<label>$INFO[Container(10051).ListItem.Label]</label>
						<visible>String.IsEmpty(Container(10051).ListItem.Art(thumb))</visible>
					</control>
					<control type="image">
						<width>276</width>
						<height>414</height>
						<texture background="true">$INFO[Container(10051).ListItem.Art(thumb)]</texture>
						<aspectratio scalediffuse="false">scale</aspectratio>
					</control>
				</control>
				<!-- meta -->
				<control type="group">
					<top>-5</top>
					<left>370</left>
					<right>70</right>
					<control type="label">
						<right>440</right>
						<height>60</height>
						<label>$INFO[Container(10051).ListItem.Label]</label>
						<font>Reg37</font>
						<aligny>top</aligny>
					</control>
					<control type="group">
						<top>60</top>
						<right>440</right>
						<height>40</height>
						<control type="grouplist">
							<height>40</height>
							<itemgap>5</itemgap>
							<orientation>horizontal</orientation>
							<control type="label">
								<label>$VAR[TmdbFilmographyCount,$LOCALIZE[31188]: ]   </label>
								<include>MetaLabel</include>
							</control>
						</control>
					</control>
					<!-- buttons -->
					<control type="list" id="100">
						<top>88</top>
						<height>130</height>
						<width>100%</width>
						<orientation>horizontal</orientation>
						<defaultcontrol always="true">0</defaultcontrol>
						<onright>noop</onright>
						<onleft>900</onleft>
						<ondown>10052</ondown>
						<include>FocusBounce</include>
						<itemlayout height="130" width="146">
							<include content="IconMenu">
								<param name="id" value="100"/>
							</include>
						</itemlayout>
						<focusedlayout height="130" width="146">
							<include content="IconMenu">
								<param name="id" value="100"/>
								<param name="focused" value="true"/>
							</include>
						</focusedlayout>
						<content>
							<item>
								<label>$LOCALIZE[15067]</label>
								<property name="icon">&#xf206;</property>
								<onclick>close</onclick>
							</item>
							<item>
								<visible>!String.IsEmpty(Container(10051).ListItem.Property(Biography))</visible>
								<label>$LOCALIZE[21887]</label>
								<property name="icon">&#xf9a9;</property>
								<onclick>RunScript(script.embuary.helper,action=textviewer,header='$ESCINFO[Container(10051).ListItem.Label]',message='$ESCINFO[Container(10051).ListItem.Property(Biography)]')</onclick>
							</item>
						</content>
					</control>
					<!-- plot -->
					<control type="textbox">
						<top>211</top>
						<right>360</right>
						<height max="200">auto</height>
						<align>justify</align>
						<aligny>top</aligny>
						<label fallback="19055">$INFO[Container(10051).ListItem.Property(Biography)]</label>
						<font>Light24</font>
						<autoscroll>false</autoscroll>
					</control>
					<!-- facts -->
					<control type="group">
						<visible>!String.IsEmpty(Container(10051).ListItem.Property(Age)) | !String.IsEmpty(Container(10051).ListItem.Property(Birthday)) | !String.IsEmpty(Container(10051).ListItem.Property(Deathday)) | !String.IsEmpty(Container(10051).ListItem.Property(place_of_birth))</visible>
						<top>208</top>
						<right>0</right>
						<width>320</width>
						<control type="label">
							<animation effect="slide" end="0,2" time="0" condition="true">Conditional</animation>
							<width>auto</width>
							<height>40</height>
							<label>Facts</label>
							<font>Reg22</font>
							<aligny>top</aligny>
							<textcolor>$VAR[AccentColor]</textcolor>
						</control>
						<control type="textbox">
							<top>3</top>
							<right>0</right>
							<height>200</height>
							<align>left</align>
							<aligny>top</aligny>
							<label>$INFO[Container(10051).ListItem.Property(Age),[CR]$LOCALIZE[31171]:   ]$INFO[Container(10051).ListItem.Property(Birthday),[CR]$LOCALIZE[21893]:   ]$INFO[Container(10051).ListItem.Property(Deathday),[CR]$LOCALIZE[21897]:   ]$INFO[Container(10051).ListItem.Property(place_of_birth),[CR]$LOCALIZE[31170]:   ]</label>
							<font>Light24</font>
							<autoscroll>false</autoscroll>
						</control>
					</control>
				</control>
				<!-- logo -->
				<include>MetaClearlogo</include>
			</control>
			<!-- movies -->
			<include content="PosterWidget">
				<param name="id" value="10052"/>
				<param name="onup" value="100"/>
				<param name="ondown" value="10053"/>
				<param name="headline" value="$LOCALIZE[342]"/>
				<param name="mainlabel" value="$INFO[ListItem.Label]"/>
				<param name="sublabel" value="$INFO[ListItem.Year]"/>
				<param name="visible_icon" value="false"/>
				<param name="use_custom_content" value="false"/>
			</include>
			<!-- shows -->
			<include content="PosterWidget">
				<param name="id" value="10053"/>
				<param name="onup" value="10052"/>
				<param name="ondown" value="10054"/>
				<param name="headline" value="$LOCALIZE[36903]"/>
				<param name="mainlabel" value="$INFO[ListItem.Label]"/>
				<param name="sublabel" value="$INFO[ListItem.Year]"/>
				<param name="visible_icon" value="false"/>
				<param name="use_custom_content" value="false"/>
			</include>
			<!-- images -->
			<include content="PosterWidget">
				<param name="id" value="10054"/>
				<param name="onup" value="10053"/>
				<param name="ondown" value="noop"/>
				<param name="headline" value="$LOCALIZE[1]"/>
				<param name="mainlabel" value="$INFO[ListItem.Label]"/>
				<param name="visible_icon" value="false"/>
				<param name="use_custom_content" value="false"/>
				<param name="height" value="551"/>
			</include>
		</control>
		<!-- header bar -->
		<include content="HeaderBar">
			<param name="id">50</param>
			<param name="header_label">The Movie Database (TMDb)</param>
		</include>
		<!-- side panel -->
		<include content="SidePanel">
			<param name="onright">50</param>
		</include>
	</controls>
</window>
