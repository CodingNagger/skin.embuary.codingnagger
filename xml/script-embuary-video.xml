<?xml version="1.0" encoding="UTF-8"?>
<window>
	<backgroundcolor>background</backgroundcolor>
	<include>PropertyIncludes</include>
	<defaultcontrol>100</defaultcontrol>
	<controls>
		<!-- hidden -->
		<control type="list" id="10051">
			<include>HiddenObject</include>
		</control>
		<!-- background -->
		<include>Background</include>
		<!-- views -->
		<control type="grouplist" id="50">
			<include>Window_OpenClose</include>
			<width>100%</width>
			<height>100%</height>
			<orientation>vertical</orientation>
			<usecontrolcoords>true</usecontrolcoords>
			<include>ScrollTime</include>
			<pagecontrol>17</pagecontrol>
			<itemgap>-80</itemgap>
			<!-- Meta -->
			<control type="group">
				<top>90</top>
				<height>480</height>
				<!-- poster -->
				<control type="group">
					<left>70</left>
					<control type="image">
						<top>-2</top>
						<left>-2</left>
						<width>282</width>
						<height>420</height>
						<texture border="20,20,20,20">items/shadow.png</texture>
					</control>
					<control type="image">
						<width>276</width>
						<height>414</height>
						<texture colordiffuse="$VAR[ThumbFallbackColor]">common/white.jpg</texture>
						<aspectratio scalediffuse="false">stretch</aspectratio>
						<visible>String.IsEmpty(Container(10051).ListItem.Art(thumb))</visible>
					</control>
					<control type="image">
						<width>276</width>
						<height>414</height>
						<texture colordiffuse="thumb_background">common/white.jpg</texture>
						<aspectratio scalediffuse="false">stretch</aspectratio>
						<visible>!String.IsEmpty(Container(10051).ListItem.Art(thumb))</visible>
					</control>
					<control type="textbox">
						<top>10</top>
						<left>10</left>
						<width>256</width>
						<height>394</height>
						<font>Light24</font>
						<textcolor>white</textcolor>
						<align>center</align>
						<aligny>center</aligny>
						<label>$INFO[Container(10051).ListItem.Label]</label>
						<visible>String.IsEmpty(Container(10051).ListItem.Art(thumb))</visible>
					</control>
					<control type="image">
						<width>276</width>
						<height>414</height>
						<texture background="true">$INFO[Container(10051).ListItem.Art(thumb)]</texture>
						<aspectratio scalediffuse="false">scale</aspectratio>
					</control>
				</control>
				<!-- meta -->
				<control type="group">
					<top>-5</top>
					<left>370</left>
					<right>70</right>
					<control type="label">
						<right>440</right>
						<height>60</height>
						<label>$INFO[Container(10051).ListItem.Label]</label>
						<font>Reg37</font>
						<aligny>top</aligny>
					</control>

					<control type="group">
						<top>60</top>
						<right>440</right>
						<height>40</height>
						<control type="grouplist">
							<height>40</height>
							<itemgap>5</itemgap>
							<orientation>horizontal</orientation>
							<control type="label">
								<label>$INFO[Container(10051).ListItem.Premiered,$LOCALIZE[31318]: ]   </label>
								<include>MetaLabel</include>
								<visible>!String.IsEmpty(Container(10051).ListItem.Premiered)</visible>
							</control>
							<control type="label">
								<label>$INFO[Container(10051).ListItem.Status,$LOCALIZE[126]: ]   </label>
								<include>MetaLabel</include>
								<visible>!String.IsEmpty(Container(10051).ListItem.Status)</visible>
							</control>
							<control type="label">
								<label>$INFO[Container(10051).ListItem.Season,$LOCALIZE[33054]: ]   </label>
								<include>MetaLabel</include>
								<visible>!String.IsEmpty(Container(10051).ListItem.Season)</visible>
							</control>
							<control type="label">
								<label>$INFO[Container(10051).ListItem.Episode,$LOCALIZE[20360]: ]   </label>
								<include>MetaLabel</include>
								<visible>!String.IsEmpty(Container(10051).ListItem.Episode)</visible>
							</control>
							<control type="label">
								<label>&#xf4ce;</label>
								<font>Material26</font>
								<textcolor>red</textcolor>
								<include>MetaLabel</include>
								<visible>!String.IsEmpty(Container(10051).ListItem.Rating)</visible>
							</control>
							<control type="label">
								<label>$INFO[Container(10051).ListItem.Rating]   </label>
								<include>MetaLabel</include>
								<visible>!String.IsEmpty(Container(10051).ListItem.Rating)</visible>
							</control>
							<control type="image">
								<animation effect="slide" end="0,2" time="0" condition="true">Conditional</animation>
								<width>24</width>
								<height>20</height>
								<texture>$VAR[RottenIcon]</texture>
								<aspectratio>keep</aspectratio>
								<visible>!String.IsEmpty(Container(10051).ListItem.Property(rating.rotten))	</visible>
							</control>
							<control type="label">
								<label>$INFO[Container(10051).ListItem.Property(rating.rotten),,   ]</label>
								<include>MetaLabel</include>
								<visible>!String.IsEmpty(Container(10051).ListItem.Property(rating.rotten))	</visible>
							</control>
							<control type="image">
								<animation effect="slide" end="0,2" time="0" condition="true">Conditional</animation>
								<width>24</width>
								<height>20</height>
								<texture>icons/rating/metacritic.png</texture>
								<aspectratio>keep</aspectratio>
								<visible>!String.IsEmpty(Container(10051).ListItem.Property(rating.metacritic))	</visible>
							</control>
							<control type="label">
								<label>$INFO[Container(10051).ListItem.Property(rating.metacritic),,   ]</label>
								<include>MetaLabel</include>
								<visible>!String.IsEmpty(Container(10051).ListItem.Property(rating.metacritic))	</visible>
							</control>
							<control type="image">
								<animation effect="slide" end="0,2" time="0" condition="true">Conditional</animation>
								<width>44</width>
								<height>20</height>
								<texture>icons/rating/imdb.png</texture>
								<aspectratio>keep</aspectratio>
								<visible>!String.IsEmpty(Container(10051).ListItem.Property(rating.imdb))	</visible>
							</control>
							<control type="label">
								<label>$INFO[Container(10051).ListItem.Property(rating.imdb),,   ]</label>
								<include>MetaLabel</include>
								<visible>!String.IsEmpty(Container(10051).ListItem.Property(rating.imdb))	</visible>
							</control>
						</control>
					</control>

					<!-- buttons -->
					<control type="list" id="100">
						<top>88</top>
						<height>130</height>
						<width>100%</width>
						<orientation>horizontal</orientation>
						<defaultcontrol always="true">0</defaultcontrol>
						<onright>noop</onright>
						<onleft>900</onleft>
						<ondown>10052</ondown>
						<include>FocusBounce</include>
						<itemlayout height="130" width="146">
							<include content="IconMenu">
								<param name="id" value="100"/>
							</include>
						</itemlayout>
						<focusedlayout height="130" width="146">
							<include content="IconMenu">
								<param name="id" value="100"/>
								<param name="focused" value="true"/>
							</include>
						</focusedlayout>
						<content>
							<item>
								<visible>String.IsEmpty(Container(10051).ListItem.Plot) + String.IsEmpty(Container(10051).ListItem.DBID)</visible>
								<label>$LOCALIZE[15067]</label>
								<property name="icon">&#xf5ad;</property>
								<onclick>close</onclick>
							</item>
							<item>
								<visible>!String.IsEmpty(Container(10051).ListItem.DBID) + !String.IsEqual(Container(10051).ListItem.Property(call),tv)</visible>
								<label>$LOCALIZE[208]</label>
								<property name="icon">&#xf40a;</property>
								<onclick>RunScript(script.embuary.helper,action=playitem,dbid=$INFO[Container(10051).ListItem.DBID])</onclick>
							</item>
							<item>
								<visible>!String.IsEmpty(Container(10051).ListItem.DBID) + String.IsEqual(Container(10051).ListItem.Property(call),tv)</visible>
								<label>$LOCALIZE[31011]</label>
								<property name="icon">&#xf24b;</property>
								<onclick>RunScript(script.embuary.helper,action=goto,path='"videodb://tvshows/titles/$INFO[Container(10051).ListItem.DBID]/"',target=videos)</onclick>
							</item>
							<item>
								<visible>!String.IsEmpty(Container(10051).ListItem.Plot)</visible>
								<label>$LOCALIZE[207]</label>
								<property name="icon">&#xf9a9;</property>
								<onclick>RunScript(script.embuary.helper,action=textviewer,header='$ESCINFO[Container(10051).ListItem.Label]',message='$ESCINFO[Container(10051).ListItem.Plot]')</onclick>
							</item>
						</content>
					</control>
					<!-- genre -->
					<control type="group">
						<top>209</top>
						<include content="MetaGenre">
							<param name="type" value="Container(10051).ListItem"/>
						</include>
					</control>
					<!-- plot -->
					<control type="textbox">
						<top>246</top>
						<height max="165">auto</height>
						<align>justify</align>
						<aligny>top</aligny>
						<label>$VAR[TmdbBudget,,[CR]]$VAR[TmdbReleaseAwards,,[CR]]$VAR[TmdbPlotSpacer]$INFO[Container(10051).ListItem.Tagline,[B],[/B][CR]]$INFO[Container(10051).ListItem.Plot]</label>
						<font>Light24</font>
						<autoscroll>false</autoscroll>
					</control>
				</control>
				<!-- logo -->
				<include>MetaClearlogo</include>
			</control>
			<!-- cast -->
			<include content="PosterWidget">
				<param name="id" value="10052"/>
				<param name="onup" value="100"/>
				<param name="ondown" value="10053"/>
				<param name="headline" value="$LOCALIZE[206]"/>
				<param name="mainlabel" value="$INFO[ListItem.Label]"/>
				<param name="sublabel" value="$INFO[ListItem.Label2]"/>
				<param name="visible_icon" value="false"/>
				<param name="use_custom_content" value="false"/>
			</include>
			<!-- similar -->
			<include content="PosterWidget">
				<param name="id" value="10053"/>
				<param name="onup" value="10052"/>
				<param name="ondown" value="10054"/>
				<param name="headline" value="$LOCALIZE[31021]"/>
				<param name="mainlabel" value="$INFO[ListItem.Label]"/>
				<param name="sublabel" value="$INFO[ListItem.Year]"/>
				<param name="visible_icon" value="false"/>
				<param name="use_custom_content" value="false"/>
			</include>
			<!-- yt -->
			<include content="WideWidget">
				<param name="id" value="10054"/>
				<param name="onup" value="10053"/>
				<param name="ondown" value="10055"/>
				<param name="headline" value="YouTube"/>
				<param name="mainlabel" value="$INFO[ListItem.Label]"/>
				<param name="sublabel" value="$INFO[ListItem.Label2]"/>
				<param name="ar" value="scale"/>
				<param name="visible_icon" value="true"/>
				<param name="use_custom_content" value="false"/>
			</include>
			<!-- images -->
			<include content="WideWidget">
				<param name="id" value="10055"/>
				<param name="onup" value="10054"/>
				<param name="ondown" value="noop"/>
				<param name="headline" value="$LOCALIZE[1]"/>
				<param name="mainlabel" value="$INFO[ListItem.Label]"/>
				<param name="visible_icon" value="false"/>
				<param name="use_custom_content" value="false"/>
				<param name="height" value="438"/>
			</include>
		</control>
		<!-- header bar -->
		<include content="HeaderBar">
			<param name="id">50</param>
			<param name="header_label">The Movie Database (TMDb)</param>
		</include>
		<!-- side panel -->
		<include content="SidePanel">
			<param name="onright">50</param>
		</include>
	</controls>
</window>
